<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:title">@color/text</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="Halooween" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonColorHalloween</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/buttonColorHalloween</item>
        <item name="android:title">@color/text</item>
    </style>

</resources>
